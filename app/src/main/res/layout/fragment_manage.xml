<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_tong"
        android:text="Tổng"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_tong"
        android:layout_toRightOf="@id/button_tong"
        android:text="000000"
        android:textSize="50sp"
        android:layout_marginTop="10dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_xuatexcel"
        android:text="Xuất tất cả file excel"
        android:layout_below="@id/button_tong"
        android:layout_marginLeft="20dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_xuatct"
        android:text="Xuất chi tiết file excel"
        android:layout_below="@id/button_xuatexcel"
        android:layout_marginLeft="20dp"
        />

</RelativeLayout>