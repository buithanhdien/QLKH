<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:orientation="vertical"
    >
    <EditText
        android:id="@+id/enter_ten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter tên"
        android:textColorHint="@color/colorBorder"
        android:textSize="20sp"
        android:inputType="text"
        android:background="@drawable/brown_border"
        android:maxLines="1"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/colorBlack"
        android:padding="12dp"/>

    <EditText
        android:id="@+id/enter_gia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter giá"
        android:textColorHint="@color/colorBorder"
        android:layout_marginTop="24dp"
        android:textSize="20sp"
        android:inputType="numberDecimal|numberSigned"
        android:background="@drawable/brown_border"
        android:maxLines="1"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/colorBlack"
        android:padding="12dp"/>
    <EditText
        android:id="@+id/enter_soluong"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter số lượng"
        android:textColorHint="@color/colorBorder"
        android:textSize="20sp"
        android:inputType="number"
        android:background="@drawable/brown_border"
        android:maxLines="1"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/colorBlack"
        android:padding="12dp"/>

    <EditText
        android:id="@+id/enter_dvt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter đơn vị tính"
        android:textColorHint="@color/colorBorder"
        android:layout_marginTop="24dp"
        android:textSize="20sp"
        android:inputType="text"
        android:background="@drawable/brown_border"
        android:maxLines="1"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/colorBlack"
        android:padding="12dp"/>
    <EditText
        android:id="@+id/enter_ghichu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter ghi chú"
        android:textColorHint="@color/colorBorder"
        android:layout_marginTop="24dp"
        android:textSize="20sp"
        android:inputType="text"
        android:background="@drawable/brown_border"
        android:maxLines="1"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/colorBlack"
        android:padding="12dp"/>

</LinearLayout>